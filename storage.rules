rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    match /menu_images/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid != null && request.auth.token.email_verified == true;
    }
    match /avatars/{userId}/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    match /{allPaths=**} {
      allow read: if false;
      allow write: if false;
    }
  }
}
